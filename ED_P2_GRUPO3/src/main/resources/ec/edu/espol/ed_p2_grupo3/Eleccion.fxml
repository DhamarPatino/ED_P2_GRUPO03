                <Font name="Serif Regular" size="13.0" />
            </font>
        </Button>
      
        <Button fx:id="file2Button" layoutX="202.0" layoutY="271.0" onAction="#uploadFile2" styleClass="custom-button" text="Subir archivo de preguntas">
            <font>
                <Font name="Serif Regular" size="13.0" />
            </font>
        </Button>
      
        <!-- File Selection ComboBox -->
        <ComboBox fx:id="fileChoiceComboBox" layoutX="217.0" layoutY="23.0" prefWidth="150.0" styleClass="custom-combobox" />

    </children>
</AnchorPane>
