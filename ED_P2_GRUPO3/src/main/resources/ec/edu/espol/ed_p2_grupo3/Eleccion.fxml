<AnchorPane id="AnchorPane" prefHeight="540.0" prefWidth="700.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espol.ed_p2_grupo3.EleccionController">

    <children>
        <!-- Background Image -->
        <ImageView fitHeight="540.0" fitWidth="700.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@fondo.jpg" />
            </image>
        </ImageView>

        <!-- Akinator Image -->
        <ImageView fitHeight="260.0" fitWidth="168.0" layoutX="37.0" layoutY="51.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@akinator.png" />
            </image>
        </ImageView>

        <VBox fx:id="vbox" layoutX="279.0" layoutY="115.0" prefHeight="50.0" prefWidth="136.0" />
      
        <!-- Selection Label -->
        <Label layoutX="196.0" layoutY="74.0" styleClass="custom-label" text="Selecciona el nÃºmero de preguntas" textFill="white">
            <font>
                <Font name="Serif Regular" size="14.0" />
            </font>
        </Label>
      
        <!-- Start Button -->
        <Button fx:id="empezar" layoutX="252.0" layoutY="212.0" mnemonicParsing="false" onAction="#empezar" styleClass="custom-button" text="Empezar">
